<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Consultar_Notas"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Minhas Notas"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="30sp"
                android:gravity="center"

                />



        </LinearLayout>


    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_margin="10dp">



            <TextView
                android:id="@+id/NomeAluno_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toEndOf="@+id/item_Num_notas"
                app:layout_constraintTop_toTopOf="@+id/item_Num_notas" />


            <LinearLayout
                android:id="@+id/Layout_nota_maeria_n1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/NomeAluno_item"
                app:layout_constraintTop_toBottomOf="@+id/NomeAluno_item"
                >
            <TextView
                android:id="@+id/materia1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Materia 1 -"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                />
                <TextView
                    android:id="@+id/M1_Nota_n1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    />

            </LinearLayout>

            <!--Nota 2-->

            <LinearLayout
                android:id="@+id/Layout_nota_materia_n2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/Layout_nota_maeria_n1"
                app:layout_constraintTop_toBottomOf="@+id/Layout_nota_maeria_n1"
                >
                <TextView
                    android:id="@+id/materia2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Materia 2 -"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    />





                <TextView
                    android:id="@+id/M2_Nota_n1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    />

            </LinearLayout>


            <!--Nota 3-->

            <LinearLayout
                android:id="@+id/Layout_nota_materia_n3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/Layout_nota_materia_n2"
                app:layout_constraintTop_toBottomOf="@+id/Layout_nota_materia_n2"
                >
                <TextView
                    android:id="@+id/materia3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Materia 3 -"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    />

                <TextView
                    android:id="@+id/M3_Nota_n1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    />

            </LinearLayout>

            <!--Nota 4-->

            <LinearLayout
                android:id="@+id/Layout_nota_materia_n4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/Layout_nota_materia_n3"
                app:layout_constraintTop_toBottomOf="@+id/Layout_nota_materia_n3"
                >
                <TextView
                    android:id="@+id/materia4_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Materia 4 -"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    />
                <TextView
                    android:id="@+id/M4_Nota_n1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    />

            </LinearLayout>

            <!--Nota 5-->

            <LinearLayout
                android:id="@+id/Layout_nota_materia_n5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/Layout_nota_materia_n4"
                app:layout_constraintTop_toBottomOf="@+id/Layout_nota_materia_n4"
                >
                <TextView
                    android:id="@+id/materia5_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Materia 5 -"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    />


                <TextView
                    android:id="@+id/M5_Nota_n1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bussiness.authentication.control.AuthenticateStudent">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        android:src="@drawable/bgforapp"
        >

    </ImageView>




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/book"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints" />


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_login"
    android:layout_marginTop="220dp"
    >
    
    <TextView
        android:id="@+id/titulologin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Login Aluno"
        android:textColor="@color/colorCiano"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"

        />

    <!--- Primeiro Input -->

    <EditText
        android:id="@+id/inputusuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/titulologin"
        android:hint="Usuario:"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:paddingStart="40dp"
        android:paddingEnd="10dp"
        android:textSize="20sp"
        android:textColor="@color/colorBlack" />
    
    <View
        android:id="@+id/Linhainput"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorCinza"
        app:layout_constraintTop_toBottomOf="@id/inputusuario" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_user"
        app:layout_constraintBottom_toBottomOf="@+id/inputusuario"
        app:layout_constraintStart_toStartOf="@+id/inputusuario"
        android:layout_marginStart="10dp"
        app:tint="@color/colorCinza" />

    <!-- Segundo Input -->

    <EditText
        android:id="@+id/inputsenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/Linhainput"
        android:hint="Senha:"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:paddingStart="40dp"
        android:paddingEnd="10dp"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        />

    <View
        android:id="@+id/Linhainputsenha"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorCinza"
        app:layout_constraintTop_toBottomOf="@id/inputsenha" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_senha"
        app:layout_constraintBottom_toBottomOf="@+id/inputsenha"
        app:layout_constraintStart_toStartOf="@+id/inputsenha"
        android:layout_marginStart="10dp"
        app:tint="@color/colorCinza" />


<Button
    android:id="@+id/btn_aluno_entrar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/Linhainputsenha"
    android:background="@drawable/btn_azul"
    android:layout_marginTop="50dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:text="Entrar"
    android:textSize="20sp"
    android:textStyle="bold"
    android:textColor="@color/colorPrimary"

    />




</androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
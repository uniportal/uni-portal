<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bussiness.authentication.control.AuthenticateTeacher">

    <ImageView
        android:id="@+id/imagem_topo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        android:src="@drawable/bgforapp"
        >
    </ImageView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        android:src="@drawable/bgforapp"
        >
    </ImageView>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/professor_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundo_login"
        android:layout_marginTop="220dp"
        >

        <TextView
            android:id="@+id/titulologinprof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Login Professor"
            android:textColor="@color/colorCiano"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"

            />

        <!--- Primeiro Input -->

        <EditText
            android:id="@+id/input_user_prof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/titulologinprof"
            android:hint="Usuario:"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingStart="40dp"
            android:paddingEnd="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorBlack" />

            <View
            android:id="@+id/Linhainput_prof"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorCinza"
            app:layout_constraintTop_toBottomOf="@id/input_user_prof" />

            <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_user"
            app:layout_constraintBottom_toBottomOf="@+id/input_user_prof"
            app:layout_constraintStart_toStartOf="@+id/input_user_prof"
            android:layout_marginStart="10dp"
            app:tint="@color/colorCinza" />



        <!-- Segundo Input -->

            <EditText
            android:id="@+id/input_senha_prof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/Linhainput_prof"
            android:hint="Senha:"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingStart="40dp"
            android:paddingEnd="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            />

            <View
            android:id="@+id/Linhainputsenha_prof"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorCinza"
            app:layout_constraintTop_toBottomOf="@id/input_senha_prof" />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_senha"
            app:layout_constraintBottom_toBottomOf="@+id/input_senha_prof"
            app:layout_constraintStart_toStartOf="@+id/input_senha_prof"
            android:layout_marginStart="10dp"
            app:tint="@color/colorCinza" />

        <Button
            android:id="@+id/btn_Entrar_Prof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Linhainputsenha_prof"
            android:background="@drawable/btn_azul"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Entrar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
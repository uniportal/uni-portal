<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

<ImageView
    android:id="@+id/icon_Capa"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:src="@drawable/education_capa"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="70dp" />
    
    <TextView
        android:id="@+id/Uniportal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uni Portal"
        android:textColor="@color/colorCiano"
        android:textStyle="bold"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_Capa" />

    <TextView
        android:id="@+id/BemVindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem Vindo!"
        android:textColor="@color/colorBlack"
        android:textStyle="normal"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/icon_Capa" />

    <Button
        android:id="@+id/SouAluno"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Sou Aluno"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="180dp"
        android:background="@drawable/btn_azul"
        />

    <Button
        android:id="@+id/SouProfessor"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Sou Professor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:background="@drawable/btn_azul"
        />





</androidx.constraintlayout.widget.ConstraintLayout>